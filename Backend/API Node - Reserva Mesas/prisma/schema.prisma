generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement()) @map("_id")
  name         String   @db.VarChar(70)
  telefone     String   @unique @db.VarChar(11) // Se você estiver armazenando como número
  data         String   @unique @db.VarChar(10)
  horario      String   @db.VarChar(5)
  email        String   @unique @db.VarChar(60)
  qtd_pessoas  Int
}